<resources>
	<drawables>
		<drawable-list id="header">
			<shape type="rectangle" x="0" y="0" width="100%" height="20%"
				color="Graphics.COLOR_BLACK" />
		</drawable-list>
		<drawable-list id="footer">
			<shape type="rectangle" x="0" y="80%" width="100%" height="20%"
				color="Graphics.COLOR_BLACK" />
		</drawable-list>
	</drawables>
	<layout id="MessageDialogLayout">
		<drawable id="header" />
		<drawable id="footer" />
		<label id="headerText" x="center" y="7%" text="headerText"
			color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_CENTER"
			font="Graphics.FONT_TINY" />
		<text-area id="bodyText" color="Graphics.COLOR_BLACK"
			justification="Graphics.TEXT_JUSTIFY_LEFT" text="bodyText" x="10%"
			y="20%" width="80%" height="60%">
			<fonts>
				<font>Gfx.FONT_SMALL</font>
			</fonts>
		</text-area>
		<label id="footerText" x="center" y="82%" text="  Akzeptieren"
			color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_CENTER" 
			font="Graphics.FONT_TINY"/>
	</layout>
</resources>