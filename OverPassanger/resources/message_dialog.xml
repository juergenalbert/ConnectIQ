<resources>
	<drawables>
		<drawable-list id="alert"
			background="Graphics.COLOR_WHITE">
			<shape type="rectangle" x="0" y="0" width="100%" height="15%"
				color="Graphics.COLOR_BLACK" />
			<shape type="rectangle" x="0" y="85%" width="100%" height="15%"
				color="Graphics.COLOR_BLACK" />
		</drawable-list>
	</drawables>
	<layout id="MessageDialogLayout">
		<drawable id="alert" />
		<label id="header" x="center" y="5%"
			color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_CENTER" />
		<text-area id="bodyText" color="Graphics.COLOR_BLACK"
			justification="Graphics.TEXT_JUSTIFY_LEFT"
			x="5%" y="15%"
			width="90%" height="70%">
			<fonts>
				<font>Gfx.FONT_MEDIUM</font>
			</fonts>
		</text-area>
	</layout>
</resources>